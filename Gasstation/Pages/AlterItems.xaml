<Page x:Class="Gasstation.Pages.AlterItems"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gasstation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AlterItems">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/MainStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <DockPanel Background="Gray" Width="200">
            <StackPanel>
                <Button Name="BackToMenuButton" Click="BackToMenuButton_Click" Margin="2 5">Back</Button>
                <ScrollViewer>
                    <StackPanel Name="ButtonsPanel">

                    </StackPanel>
                </ScrollViewer>
            </StackPanel>
            
        </DockPanel>
        <DockPanel Grid.Row="1" Background="Gray">
            <StackPanel Margin="5" VerticalAlignment="Bottom">
                <!--<TextBox Name="ZapfsaeulenNameBox" Background="LightGray" Margin="0 2" ></TextBox>-->
                <Button Name="ZapfsaeuleAddButton" Click="ZapfsaeuleAddButton_Click">Zapfsäule hinzufügen</Button>
                <Button x:Name="ZapfsaeuleLoeschenButton" Margin="0 2" Click="ZapfsaeuleLoeschenButton_Click">Zapfsäule löschen</Button>
            </StackPanel>
        </DockPanel>
        <StackPanel Grid.Column="1" Margin="10">
            <WrapPanel>
                <Label Content="Zapfsäule:" FontSize="25" FontWeight="Medium"></Label>
                <Label FontSize="25" FontWeight="Medium"></Label>
            </WrapPanel>
            <WrapPanel>
                <Image Source="../Icons/Tankstelle.png" Width="150"></Image>
                <Label VerticalAlignment="Center">Zapfsäulen</Label>
            </WrapPanel>
            <WrapPanel>
                <Label FontSize="20">Anzahl Zapfsäulen:</Label>
                <TextBlock x:Name="AnzZapfsäulenBox" Text="{Binding Path=Tankstelle.Zapfseulen.Count}"></TextBlock>
            </WrapPanel>
            <ComboBox Name="SelectZapfhahn" ItemsSource="{Binding Path=Zapfsaeule.}" 
                    DisplayMemberPath="Name"
                    SelectedValuePath="id" SelectionChanged="SelectZapfseule_SelectionChanged"></ComboBox>
            <!--<Label Content="{Binding Path=Tankstelle.id}" FontSize="40" Foreground="Red"></Label>-->
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="1" Margin="10">
            <Button Name="FuelOverview" Margin="0 2" Height="40" Click="FuelOverview_Click">Fuel overview</Button>
            <Button Name="ZapfseulenOverview" Height="40" Click="ZapfseulenOverview_Click">Zapfsäulen overview</Button>
        </StackPanel>
    </Grid>
</Page>
