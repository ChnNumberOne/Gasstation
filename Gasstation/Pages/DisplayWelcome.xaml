<Page x:Class="Gasstation.Pages.DisplayWelcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gasstation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DisplayWelcome">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/MainStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <Image Name="DisplayIconImage" Source="../Images/Zapfsaeule.png" Height="200" Margin="10" HorizontalAlignment="Center">
            </Image>
            <Label HorizontalAlignment="Center" FontSize="40" Padding="-5" Name="TextLabel">Welcome!</Label>
            <TextBlock FontSize="17" HorizontalAlignment="Center" Name="DetailsBlock">Chose what you want to do next.</TextBlock>
        </StackPanel>
    </Grid>
</Page>
