<Window x:Class="WPF_OOP_Testing.Fenster.LogInPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_OOP_Testing.Fenster"
        mc:Ignorable="d"
        Title="Log in." Height="245" Width="370" ResizeMode="NoResize">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/Styles.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <StackPanel>
            <Label FontSize="50">Log in.</Label>
            <TextBlock FontSize="15">Please log in with your password.</TextBlock>
            <PasswordBox Name="PwdBox" Margin="10"></PasswordBox>
            <Button Name="LogInButton" Height="50" Margin="10 0" Click="LogInButton_Click" IsDefault="True">Log in.</Button>
            <Label Name="PwWrong" Foreground="Transparent" FontSize="18" Margin="10 0">Incorrect password.</Label>
        </StackPanel>
        
    </Grid>
</Window>
